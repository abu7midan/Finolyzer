@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Finolyzer.Localization
@inject IHtmlLocalizer<FinolyzerResource> L
@inject Volo.Abp.Users.ICurrentUser CurrentUser
@model Finolyzer.Pages.IndexModel

@section styles {
    <abp-style src="/Pages/Index.cshtml.css" />
    <style>
        .icon-saudi_riyal {
            font-weight: bold;
            font-size: 1.2rem;
            margin-left: 4px;
            color: #20c997;
        }

        .title-icon {
            width: 48px;
            height: 48px;
            margin-right: 12px;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1.5rem;
        }

        .feature-card {
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            padding: 1.5rem;
            transition: 0.3s ease-in-out;
            background: #ffffff;
        }

            .feature-card:hover {
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06);
            }

        .section-title {
            padding-bottom: 0.5rem;
            font-size: 1.5rem;
            font-weight: 600;
            border-bottom: 2px solid #0d6efd;
            margin-bottom: 2rem;
        }

        .subtitle {
            color: #6c757d;
            font-size: 1.25rem;
        }

        .chart-placeholder {
            height: 300px;
            background: linear-gradient(135deg, #f1f4f9, #dce3ec);
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.5rem;
            font-size: 1.2rem;
            color: #6c757d;
        }
    </style>
}
@section scripts {
    <abp-script src="/Pages/Index.cshtml.js" />
}

<!-- 🔷 Finolyzer Branding -->
<div class="text-center my-5">
    <div class="d-inline-flex align-items-center">
        <svg class="title-icon text-primary" fill="#0d6efd" viewBox="0 0 24 24">
            <path d="M4 14h4v6H4v-6zm6-4h4v10h-4V10zm6-6h4v16h-4V4z" />
        </svg>
        <h1 class="display-5 fw-bold text-primary mb-0">Finolyzer</h1>
        <span class="icon-saudi_riyal">﷼</span>
    </div>
    <p class="subtitle mt-2">Effortless visibility into your IT and cloud financials, system dependencies, integrations, and resource allocation.</p>
</div>

<!-- 🔍 App Description -->
<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10 text-center">
            <h3 class="mb-3">📊 What is Finolyzer?</h3>
            <p class="fs-5 text-muted">
                <strong>Finolyzer</strong> is a FinOps platform that helps IT leaders & finance teams manage the true cost of applications, servers, APIs, and human resources.
                With system-level granularity, you can visualize dependencies, identify high-cost areas, calculate shared service expenses, and track usage-based integrations—all in real time.
            </p>
        </div>
    </div>
</div>

<!-- 💡 Key Features -->
<div class="container pb-5">
    <div class="section-title">🔐 Finolyzer Highlights</div>
    <div class="features-grid">
        <div class="feature-card text-center">
            <i class="fas fa-sitemap fa-2x text-primary mb-3"></i>
            <h5>System Dependency Mapping</h5>
            <p class="text-muted">Map interconnects between systems, services, and shared infrastructure.</p>
        </div>
        <div class="feature-card text-center">
            <i class="fas fa-coins fa-2x text-success mb-3"></i>
            <h5>Detailed Cost Breakdown</h5>
            <p class="text-muted">Break costs by resource, license, cloud server, salaries, and more.</p>
        </div>
        <div class="feature-card text-center">
            <i class="fas fa-network-wired fa-2x text-warning mb-3"></i>
            <h5>Integration Insights</h5>
            <p class="text-muted">Track transaction volume and API usage costs for third-party services.</p>
        </div>
        <div class="feature-card text-center">
            <i class="fas fa-users fa-2x text-info mb-3"></i>
            <h5>Shared Services Logic</h5>
            <p class="text-muted">Split costs from shared systems (ex: internet, hosting, office rent) across apps.</p>
        </div>
        <div class="feature-card text-center">
            <i class="fas fa-chart-line fa-2x text-indigo mb-3"></i>
            <h5>Time-Based Analytics</h5>
            <p class="text-muted">View total and incremental cost trends by month, quarter, or year.</p>
        </div>
        <div class="feature-card text-center">
            <i class="fas fa-file-export fa-2x text-danger mb-3"></i>
            <h5>Export to PDF/Excel</h5>
            <p class="text-muted">Generate and share cost summary documents with leadership and teams.</p>
        </div>
    </div>
</div>

<!-- 📈 Visual Charts Placeholder -->
<div class="container pb-5">
    <div class="section-title">📈 Live Cost Insights</div>
    <div class="row g-4">
        <div class="col-md-6">
            <div class="chart-placeholder">[🏗️ Cost Over Time – Bar Chart Placeholder]</div>
        </div>
        <div class="col-md-6">
            <div class="chart-placeholder">[📊 System vs Shared vs Integration – Pie Chart Placeholder]</div>
        </div>
    </div>
</div>

<!-- ✅ CTA -->
<div class="container text-center mt-4">
    @if (!CurrentUser.IsAuthenticated)
    {
        <a href="/Account/Login" class="btn btn-primary btn-lg mt-3">
            <i class="fas fa-arrow-right-to-bracket me-2"></i> Login to Finolyzer
        </a>
    }
</div>